@@ -0,0 +1,92 @@
+:root{
+  --bg:#0b0f14; --panel:#111822; --muted:#7a8899; --text:#e9eef5;
+  --card:#0f1620; --border:#1e2a3a; --accent:#2b394c; --brand:#39bdf2; --brand2:#1dd1a1;
+}
+*{box-sizing:border-box}
+body{margin:0;background:var(--bg);color:var(--text);font:16px/1.55 system-ui,Segoe UI,Roboto,Helvetica,Arial}
+a{color:#9fdfff;text-decoration:none}
+.container{max-width:1120px;margin:0 auto;padding:24px}
+
+.topbar{position:sticky;top:0;z-index:50;border-bottom:1px solid var(--border);background:linear-gradient(180deg,#0b0f14 60%,rgba(11,15,20,0));display:flex;justify-content:space-between;align-items:center}
+.brand .logo{height:48px}
+.nav{display:flex;gap:16px;align-items:center}
+
+.hero{padding:36px 0}
+.badges{display:flex;gap:8px;flex-wrap:wrap}
+.badge{font-size:12px;border:1px solid var(--accent);padding:6px 10px;border-radius:999px;color:#cfe7ff;background:rgba(57,189,242,.08)}
+
+h1,h2,h3{margin:8px 0 10px}
+.grid{display:grid;grid-template-columns:repeat(3,1fr);gap:16px}
+@media (max-width:960px){.grid{grid-template-columns:repeat(2,1fr)}}
+@media (max-width:640px){.grid{grid-template-columns:1fr}}
+
+.card{background:var(--card);border:1px solid var(--border);border-radius:16px;overflow:hidden}
+.card img{width:100%;height:180px;object-fit:cover;background:#0c1219}
+.card h4{margin:10px 12px}
+.card .muted{color:var(--muted);font-size:14px;margin:0 12px 12px}
+
+.columns{display:grid;grid-template-columns:repeat(3,1fr);gap:14px}
+@media (max-width:820px){.columns{grid-template-columns:1fr}}
+.panel{background:var(--panel);border:1px solid var(--border);border-radius:16px;padding:16px}
+.note{color:var(--muted);font-size:13px}
+
+.contact{display:grid;gap:10px}
+.contact .row{display:grid;grid-template-columns:1fr 1fr;gap:10px}
+@media (max-width:720px){.contact .row{grid-template-columns:1fr}}
+input,textarea{width:100%;padding:10px 12px;border-radius:10px;border:1px solid var(--accent);background:#0b1219;color:var(--text)}
+textarea{min-height:110px}
+
+.btn{display:inline-block;padding:10px 14px;border-radius:12px;border:1px solid var(--accent);color:var(--text)}
+.btn.primary{border-color:transparent;background:linear-gradient(135deg,var(--brand),var(--brand2));color:#06222d;font-weight:700}
+.btn-row{display:flex;gap:10px}
+
+.footer{border-top:1px solid var(--border);padding:18px 24px;margin-top:24px;color:var(--muted);text-align:center}
+.product-hero{max-width:520px;width:100%;border-radius:10px;border:1px solid var(--border)}
+
